<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MVP.views.ui.fragments.EditProfilFragment">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">


           <LinearLayout
               android:layout_weight="1.5"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:orientation="vertical">
               <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="40dp"
                   android:layout_marginRight="40dp"
                   android:layout_marginBottom="20dp"
                   android:textColor="@color/grey_font"
                   android:text="@string/mon_profil"
                   android:textSize="18sp"/>
               <LinearLayout
                   android:layout_marginLeft="40dp"
                   android:layout_marginRight="40dp"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/grey_font"/>
           </LinearLayout>
           <LinearLayout
               android:layout_weight="4"
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_marginLeft="40dp"
                   android:layout_marginRight="40dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginBottom="10dp"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/filledTextField"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >


                       <com.google.android.material.textfield.TextInputEditText
                           android:hint="Nom utilisateur"
                           android:padding="10dp"
                           android:id="@+id/et_username"
                           android:lines="1"
                           android:background="@drawable/rouded_edittext"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />

                   </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginLeft="40dp"
                   android:layout_marginRight="40dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/filledTextField2"
                       app:passwordToggleEnabled="true"
                       app:passwordToggleDrawable="@drawable/ic_visibility"
                       app:passwordToggleTint="@color/colorGold"
                       app:passwordToggleTintMode="multiply"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >

                       <com.google.android.material.textfield.TextInputEditText
                           android:inputType="textPassword"
                           android:hint="Mot de passe"
                           android:padding="10dp"
                           android:id="@+id/et_password"
                           android:lines="1"
                           android:background="@drawable/rouded_edittext"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />

                   </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_marginLeft="40dp"
                   android:layout_marginRight="40dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/filledTextField3"
                       app:passwordToggleEnabled="true"
                       app:passwordToggleDrawable="@drawable/ic_visibility"
                       app:passwordToggleTint="@color/colorGold"
                       app:passwordToggleTintMode="multiply"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >

                       <com.google.android.material.textfield.TextInputEditText
                           android:inputType="textPassword"
                           android:hint="Confirmer mot de passe"
                           android:padding="10dp"
                           android:id="@+id/et_confirm_password"
                           android:lines="1"
                           android:background="@drawable/rouded_edittext"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />


                   </com.google.android.material.textfield.TextInputLayout>

               </LinearLayout>






           </LinearLayout>
           <LinearLayout
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1">
               <com.airbnb.lottie.LottieAnimationView
                   android:visibility="gone"

                   android:id="@+id/loader"
                   android:layout_gravity="center"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   app:lottie_autoPlay="true"
                   app:lottie_fileName="loader.json"
                   app:lottie_loop="true" />
           </LinearLayout>
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2">
               <LinearLayout
                   android:orientation="vertical"
                   android:id="@+id/button_confirm_edit_profil"
                   android:layout_margin="40dp"
                   android:background="@drawable/bg_reclamation_time"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_height="wrap_content"
                       android:text="@string/confirmer"
                       android:textColor="@android:color/white"
                       android:textSize="18sp"
                       android:layout_margin="10dp"/>


               </LinearLayout>

           </LinearLayout>
       </LinearLayout>


</FrameLayout>