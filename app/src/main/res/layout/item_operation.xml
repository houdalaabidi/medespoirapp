<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/grey_font"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_devis_operations"
            android:orientation="vertical">

            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:id="@+id/label_operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_devis_label_operation"
                android:gravity="center"
                android:padding="10dp"
                android:text="Chirurgie Visage"
                android:textColor="@android:color/white" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_item_operation"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>