<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.touchlink.medespoir.MVP.views.ui.activities.ResetPasswordActivity">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/fond_inscription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fond_inscription"
        app:srcCompat="@drawable/fond_inscription" />
    <ImageView
        android:id="@+id/logo_medespoir"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo_medespoir"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:id="@+id/container_insc_conn"
        android:layout_below="@id/logo_medespoir"
        android:baselineAligned="false" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="start"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:layout_gravity="start"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"
                        android:text="@string/reset_pw"/>
                    <LinearLayout
                        android:background="@color/colorGold"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/grey_font"
                android:text="@string/new_pwd"/>
            <LinearLayout
                android:background="@drawable/transparent_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold
                    android:inputType="textPassword"
                    android:drawableEnd="@drawable/ic_visibility"
                    android:id="@+id/et_username"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/grey_font"
                android:text="@string/confirm_pwd"/>
            <LinearLayout
                android:background="@drawable/transparent_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold
                    android:id="@+id/et_pw"
                    android:inputType="textPassword"
                    android:drawableEnd="@drawable/ic_visibility"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reset_pwd_button"
                android:background="@drawable/button_devis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_pw"
                    android:textColor="@android:color/white"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>