<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MVP.views.ui.activities.RegisterActivity">

    <ImageView
        android:contentDescription="image"
        android:scaleType="centerCrop"
        android:id="@+id/fond_inscription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fond_inscription"
        app:srcCompat="@drawable/fond_inscription" />

    <ImageView
        android:contentDescription="image"
        android:id="@+id/logo_medespoir"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo_medespoir"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:id="@+id/container_insc_conn"
        android:layout_below="@id/logo_medespoir"
        android:baselineAligned="false" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:text="@string/inscription"/>
                <LinearLayout
                    android:background="@color/colorGold"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/connexion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:text="@string/connexion"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey_font"
                android:text="@string/email"/>
            <LinearLayout
                android:background="@drawable/transparent_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold
                    android:id="@+id/et_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey_font"
                android:text="@string/user_name"/>
            <LinearLayout
                android:background="@drawable/transparent_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold
                    android:inputType="text"
                    android:id="@+id/et_username"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey_font"
                android:text="@string/password"/>
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:background="@drawable/transparent_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold
                    android:id="@+id/et_pw"
                    android:inputType="textPassword"
                    android:drawableEnd="@drawable/ic_visibility"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirETBold>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/register_button"
                android:background="@drawable/button_devis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textColor="@android:color/white"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"
            android:id="@+id/loader2"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loader2.json"
            app:lottie_loop="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:background="@color/grey_font"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/reset_pwd"
            android:textColor="@color/grey_font"
            android:layout_height="wrap_content"
            android:text="@string/forget_pw"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>