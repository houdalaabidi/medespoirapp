<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_operations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/operation_souhaitee"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fadeScrollbars="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_fragment_operations"/>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="end"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:id="@+id/negative_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack" />

            <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
                android:id="@+id/positive_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/colorDarkGold" />
        </LinearLayout>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/loader"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loader.json"
        app:lottie_loop="true" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_connexectivity_dialog"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="20dp"
            android:id="@+id/loader2"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="no_connexion.json"
            app:lottie_loop="true" />
        <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVLight
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:textColor="@color/colorBlack"
            android:text="@string/no_connexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVBold
        android:id="@+id/no_operations"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:text="@string/no_operations"/>
</LinearLayout>