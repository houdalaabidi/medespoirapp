<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/check_box_sous_intervention"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:buttonTint="@color/colorGold"
        android:gravity="center" />

    <com.touchlink.medespoir.MVP.views.ui.customviews.MedEspoirTVRegular
        android:id="@+id/label_sous_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Lifting Visage"
        android:textColor="@color/colorBlack"
        android:textSize="12sp" />


</LinearLayout>